@model IEnumerable<BanterBurger.Models.Burger>

@{
    ViewData["Title"] = "Index";
}

<h1 class="fw-bold">Menu</h1>

<p>
    <a asp-action="Create">Create New</a>
</p>
<div class="row shadow rounded">
<table class="table">
    <thead>
        <tr>
            <th>
                @Html.DisplayNameFor(model => model.Name)
            </th>
            <th>
                @Html.DisplayNameFor(model => model.Price)
            </th>
            <th>
                @Html.DisplayNameFor(model => model.Bun)
            </th>
            <th>
                @Html.DisplayNameFor(model => model.Patty)
            </th>
            <th>
                @Html.DisplayNameFor(model => model.Condiments)
            </th>
            <th></th>
        </tr>
    </thead>
    <tbody>
@foreach (var item in Model) {
        <tr>
            <td>
                @Html.DisplayFor(modelItem => item.Name)
            </td>
            <td>
                @Html.DisplayFor(modelItem => item.Price)
            </td>
            <td>
                @Html.DisplayFor(modelItem => item.Bun)
            </td>
            <td>
                @Html.DisplayFor(modelItem => item.Patty)
            </td>
            <td>
                @Html.DisplayFor(modelItem => item.Condiments)
            </td>
            <td>
                <a asp-action="Details" asp-route-id="@item.Id">Details</a> 
            </td>
        </tr>
}
    </tbody>
</table>
</div>
